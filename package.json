{
  "name": "giji-assets",
  "description": "人狼議事 サポートアセット",
  "author": "7korobi@gmail.com",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "memory-orm": "0.6.8",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-petit-hooks": "^0.3.37",
    "roosterjs": "^7.16.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.162",
    "@types/node": "^14.11.10",
    "@types/react-dom": "^16.9.8",
    "jest": "^26.5.3",
    "js-yaml-loader": "^1.2.2",
    "json-loader": "^0.5.7",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "yaml-loader": "^0.6.0"
  },
  "scripts": {
    "jest": "jest -u --config config/node/jest.js --rootDir .",
    "test": "run-s jest",
    "format": "prettier --no-semi --single-quote --print-width 100 --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "make": "run-s make_all",
    "make_all": "run-p -n make:*",
    "make:sow": "webpack --mode production --config src/config/webpack.sow.js",
    "deploy:aws": "aws s3 sync dist s3://giji-assets/javascripts --acl public-read --exclude '*.html'",
    "dec": "run-s dec:*",
    "dec:1_jsfy": "decaffeinate --use-cs2 --use-js-modules --loose-js-modules --safe-import-function-identifiers --loose src/models/",
    "dec:2_modern": "decaffeinate --modernize-js src/models/",
    "g": "run-p -n g:*",
    "g:sudo": "npm install -g windows-build-tools",
    "g:msys": "pacman -S openssh rsync",
    "g:npm": "npm install -g aws-sdk firebase-tools npm-check-updates typesync"
  }
}
