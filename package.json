{
  "name": "giji-assets",
  "description": "人狼議事 サポートアセット",
  "author": "7korobi@gmail.com",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "date-fns": "^2.16.1",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "memory-orm": "0.7.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-petit-hooks": "^0.4.3",
    "roosterjs": "^7.16.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@types/jquery": "^3.5.4",
    "@types/lodash": "^4.14.164",
    "@types/node": "^14.14.6",
    "autoprefixer": "^10.0.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.6.3",
    "js-yaml-loader": "^1.2.2",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.5",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.9",
    "webpack": "^5.4.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "yaml-loader": "^0.6.0"
  },
  "scripts": {
    "jest": "jest -u --config config/node/jest.js --rootDir .",
    "type": "tsc -p . --noemit",
    "test": "run-s jest",
    "format": "prettier --no-semi --single-quote --print-width 100 --write \"{src,public/stylesheets}/**/*.{css,ts,tsx,js,jsx,json,md}\"",
    "start": "webpack-dev-server --open --config src/config/webpack.sow.js",
    "make": "run-s make_vendor make_all",
    "make_all": "run-p -n make:*",
    "make_vendor": "run-p -n make_vendor:*",
    "make_vendor:giji-app": "rsync -ac --delete ../giji/app/ ./vendor/giji/app/",
    "make_vendor:giji-config": "rsync -ac --delete ../giji/config/ ./vendor/giji/config/",
    "make:sow": "webpack --mode production --config src/config/webpack.sow.js",
    "deploy": "run-s make deploy_all",
    "deploy_all": "run-p -n deploy:*",
    "deploy:aws-js": "aws s3 sync dist s3://giji-assets/javascripts --acl public-read --exclude '*.html'",
    "deploy:aws-css": "aws s3 sync public/stylesheets s3://giji-assets/stylesheets --acl public-read --exclude '*.html'",
    "deploy:aws-ciel-js": "aws s3 sync public/assets-show-fix s3://giji-assets/assets-show-fix --acl public-read --exclude '*.html'",
    "dec": "run-s dec:*",
    "dec:1_jsfy": "decaffeinate --use-cs2 --use-js-modules --loose-js-modules --safe-import-function-identifiers --loose src/models/",
    "dec:2_modern": "decaffeinate --modernize-js src/models/",
    "g": "run-p -n g:*",
    "g:sudo": "npm install -g windows-build-tools",
    "g:msys": "pacman -S openssh rsync",
    "g:npm": "npm install -g aws-sdk firebase-tools npm-check-updates typesync"
  }
}
