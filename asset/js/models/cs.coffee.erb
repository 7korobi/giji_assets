new Mem.Rule("face").schema ->
  @has_many "chr_jobs"
  @has_many "chr_npcs"

  @order "order"
  @scope (all)->
    tag: (tag_id)->
      switch tag_id
        when "all"
          all
        else
          all.in tags:tag_id

    chr_jobs: (chr_job_id)->
      all.where {chr_job_id}

    name_head: ->
      counts = []
      for idx in ["ア".charCodeAt(0) .. "ン".charCodeAt(0)]
        key = String.fromCharCode idx
        names = all.where(name:///^#{key}///).pluck "name"
        counts[names.length] ?= []
        counts[names.length].push "<#{key}>#{names.join(" ")}"
      counts

  item =
    count: 1
  @map_reduce (o, emit)->
    emit "all", "all", item
    for tag in o.tags
      emit "tag", tag, item



