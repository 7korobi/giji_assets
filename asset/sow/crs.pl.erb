<%# coding: UTF-8 -%>
package SWResource_<%= @csid %>;

#----------------------------------------
# キャラセット
#----------------------------------------

sub GetRSChr {
  my $sow = $_[0];

  my $maker = $sow->{'cfg'}->{'CID_MAKER'};
  my $admin = $sow->{'cfg'}->{'CID_ADMIN'};


  # 表示順
<%  @chr_orders.each do |tag, face_ids|  %>
  my @<%= tag %> = ('<%= face_ids.join("', '") %>');
<%  end %>
  my %chrorder = (
<%  @chr_orders.each do |tag, face_ids|  %>
    '<%= tag %>' => \@<%= tag %>,
<%  end %>
  );

  my @tag_order = ('<%= @tag_order.join("', '") %>');
  my @order = ('<%= @orders.map(&:face_id).join("', '") %>');


  # キャラの肩書き
  my %chrjob = (
<%  @lists.each do |order|  %>
    '<%= order.face_id %>' => '<%= order.job %>',
<%  end %>
    $maker => '<%= @chrset.maker %>',
    $admin => '<%= @chrset.admin %>',
  );

  # キャラの名前
  my %chrname = (
<%  @lists.each do |order|  %>
    '<%= order.face_id %>' => '<%= order.name %>',
<%  end %>
    $maker    => '（村建て人）',
    $admin    => '（管理人）',
  );

  # ダミーキャラの発言
  my @npcsay =(
    <%= @chrnpc.say_0 %>,
    <%= @chrnpc.say_1 %>,
  );

  my @expression = (
  );

  my %charset = (
    CAPTION        => '<%= @chrnpc.caption %>',
    NPCID          => '<%= @chrnpc.face_id %>',
    TAG_ORDER      => \@tag_order,
    CHRORDER       => \%chrorder,
    CHRNAME        => \%chrname,
    CHRJOB         => \%chrjob,
    ORDER          => \@order,
    NPCSAY         => \@npcsay,
    IMGFACEW       => 90,
    IMGFACEH       => 130,
    IMGBODYW       => 90,
    IMGBODYH       => 130,
    DIR            => "$sow->{'cfg'}->{'DIR_IMG'}/portrate",
    EXT            => '.jpg',
    BODY           => '',
    FACE           => '',
    GRAVE          => '',
    EXPRESSION     => \@expression,
    LAYOUT_NAME    => 'right',
  );

  return \%charset;
}

1;
